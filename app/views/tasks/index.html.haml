%h1
  Listing tasks
%table
  %tr
    %th
      Title
    %th
      Due
    %th
      Description
    %th
      Status
  - @tasks.each do |task|
    %tr
      %td
        = h task.title
      %td
        = h task.due
      %td
        = h task.description
      %td
        = h task.status
      %td
        = link_to 'Show', task
      %td
        = link_to 'Edit', edit_task_path(task)
      %td
        = link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete
%br
= link_to 'New task', new_task_path
